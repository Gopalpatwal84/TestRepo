<section class="section">
    <div class="row">
        <div class="column">
            <h1>Modals</h1>
            <pre>@(@"
<a class=""button"" data-pops-up=""the-modal"" href=""#"">Pop it up!</a>
<section id=""the-modal"" class=""section modal"">
    <a href=""#"" class=""close"">&times;</a>
    <div class=""row"">
        <div class=""column"">
            <h2>Mr. Heading</h2>
            <p>Mr. Paragraph</p>
        </div>
    </div>
</section>")</pre>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="column">
            <a class="button" data-pops-up="the-modal" href="#">Pop it up!</a>
        </div>
    </div>
    <div class="row">
        <div class="column">
            <a class="button" href="https://youtu.be/cHkMfPtmfyE?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-" data-pops-up="the-video-modal">
                <span class="icon">@SvgHelper.GetSvg("play")</span>
                Pop up that video
             </a>
        </div>
    </div>
</section>

<section id="the-modal" class="section modal">
    <button class="close">&times;</button>
    <div class="row column">
        <h2>Mr. Heading</h2>
        <p>Mr. Paragraph</p>
    </div>
</section>

<section id="the-video-modal" class="section modal modal-video" data-video-embed="https://www.youtube.com/embed/cHkMfPtmfyE?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-&amp;showinfo=0&amp;autoplay=1">
    <button class="close">&times;</button>
    <div class="row column">
        <iframe frameborder="0" allowfullscreen></iframe>
    </div>
</section>