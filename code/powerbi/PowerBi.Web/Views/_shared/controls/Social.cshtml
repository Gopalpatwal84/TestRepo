@model PowerBI.Web.Models.Social

<div class="linkList linkList-horizontal">
    <a href="@Html.RawFormatInvariant("https://www.linkedin.com/shareArticle?mini=true&url={0}", Model.Url)" class="social-share social-linkedin">
        <img src="@CdnHelper.GetCdnUrl("/pictures/shared/social/in_share.png")" srcset="@CdnHelper.GetCdnUrl("/pictures/shared/social/in_share_x2.png") 2x" alt="LinkedIn" />
    </a>
    <a href="@Html.RawFormatInvariant("https://twitter.com/share?url={0}&text={1}&via={2}", Model.Url, Model.Title, "MSPowerBI")" class="social-share social-twitter">
        <img src="@CdnHelper.GetCdnUrl("/pictures/shared/social/tweet_twitter.png")" srcset="@CdnHelper.GetCdnUrl("/pictures/shared/social/tweet_twitter_x2.png") 2x" alt="Twitter" />
    </a>
    <a href="@Html.RawFormatInvariant("https://www.facebook.com/share.php?u={0}", Model.Url)" class="social-share social-facebook">
        <img src="@CdnHelper.GetCdnUrl("/pictures/shared/social/like_fb.png")" srcset="@CdnHelper.GetCdnUrl("/pictures/shared/social/like_fb_x2.png") 2x" alt="Facebook" />
    </a>
</div>