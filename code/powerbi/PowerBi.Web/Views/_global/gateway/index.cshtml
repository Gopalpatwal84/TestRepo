@model PowerBI.Web.Models.Pages.ViewMetadataModel
@using Resources = PowerBI.Resources.Pages.Gateway.Index


@{
    Model.PageTitle = Resources.META_PAGETITLE;
    Model.MetaDescription = Resources.META_DESCRIPTION;
    Model.MetaKeywords = Resources.META_KEYWORDS;
}

<section class="section section-size3 section-palette02">
    <div class="row">
        <div class="column large-5">
            <h1>@Resources.Hero_Heading</h1>
        </div>
        <div class="column large-6 large-offset-1">
            <div class="row column">
                <p>@Resources.Hero_Content</p>
            </div>
            <div class="row row-size2">
                <div class="column">
                    <ul class="linkList linkList-horizontal">
                        <li><a id="gateway-download" href="@Html.LocalizeUrl("go:820925")" class="button">@Resources.DownloadGateway</a></li>
                        <li><a id="gateway-learn-more" href="@Html.LocalizeUrl("/documentation/powerbi-gateway-onprem/", isFullyQualified: true)" class="cta-secondary">@Resources.Hero_LearnMore<span class="glyphicon glyph-micro pbi-glyph-chevronrightmedium"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="row column">
        <div class="column medium-4">
            <div class="row column">
                <div class="icon icon-palette02 icon-size3">
