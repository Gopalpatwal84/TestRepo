            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.EasySetup_Heading</h3>
                    <p>@Resources.EasySetup_Content</p>
                </div>
            </div>
        </div>
        <div class="column medium-4">
            <div class="row column">
                <div class="icon icon-palette02 icon-size3">
                    @SvgHelper.GetSvg("lock")
                </div>
            </div>
            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.SecureAccess_Heading</h3>
                    <p>@Resources.SecureAccess_Content</p>
                </div>
            </div>
        </div>
