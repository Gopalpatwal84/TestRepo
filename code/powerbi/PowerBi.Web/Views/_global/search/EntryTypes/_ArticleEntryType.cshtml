@model PowerBI.Web.Models.Pages.Search.SearchResultModel<PowerBI.Search.Documents.ArticleEntry>

@using Acom.Search.Client.Extensions
@using Resources = PowerBI.Resources.Pages.Search.Index

<div class="row row-size3 search-result">
    <div class="column">
        <h3 class="text-palette02 title">
            <a href="@Html.LocalizeUrl(Model.Result.Document.Url)">
                @Html.Raw(Model.Result.TitleExcerptForCurrentLanguage())
            </a>
        </h3>
        <span class="text-light label">@Resources.ResourceManager.GetString(Model.Result.Document.Type)</span>
        <p>@Html.Raw(Model.Result.SummaryExcerptForCurrentLanguage())</p>
    </div>
</div>
