@using Resources = PowerBI.Resources.Pages.Tour.Index;

@{
    Model.PageTitle = Resources.META_PAGETITLE;
    Model.MetaKeywords = Resources.META_KEYWORDS;
    Model.MetaDescription = Resources.META_DESCRIPTION;
}

<section class="section section-palette02 text-center">
    <div class="row">
        <div class="column">
            <h1>@Resources.Hero_Heading</h1>
        </div>
    </div>
    <div class="row">
        <div class="column medium-10 medium-centered">
            <a href="https://youtu.be/cHkMfPtmfyE?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-" data-event="tour-played-video" data-event-property="Focus on what matters most" class="video" data-pops-up="modal-video1">
                <span class="icon">
                    @SvgHelper.GetSvg("play-for-video")
                </span>
                <img alt="" src="@CdnHelper.GetCdnUrl("/pictures/pages/tour/tour.jpg")" />
            </a>
        </div>
    </div>
    <div class="row">
        <div class="column medium-8 medium-centered">
            <p>@Resources.Hero_Copy</p>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="column">
            <h2 class="text-heading1">@Resources.Introducing_Heading</h2>
        </div>
    </div>
    <div class="row">
        <div class="column medium-6">
            <div class="row">
                <div class="column">
                    <a href="https://youtu.be/90sKw9K1OCY?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-" data-event="tour-played-video" data-event-property="See the full picture in one pane" class="video" data-pops-up="modal-video2">
                        <span class="icon">
                            @SvgHelper.GetSvg("play-for-video")
                        </span>
                        <img alt="" src="@CdnHelper.GetCdnUrl("/pictures/pages/tour/onepane.jpg")" />
                    </a>
                </div>
            </div>
            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.OnePane_Heading</h3>
                    <p>@Resources.OnePane_Copy</p>
                </div>
            </div>
        </div>
        <div class="column medium-6">
            <div class="row">
                <div class="column">
                    <a href="https://youtu.be/OPRIOUj8JYw?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-" data-event="tour-played-video" data-event-property="Bring details to life" class="video" data-pops-up="modal-video3">
                        <span class="icon">
                            @SvgHelper.GetSvg("play-for-video")
                        </span>
                        <img alt="" src="@CdnHelper.GetCdnUrl("/pictures/pages/tour/details.jpg")" />
                    </a>
