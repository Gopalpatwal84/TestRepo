            </div>
            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.Details_Heading</h3>
                    <p>@Resources.Details_Copy</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column medium-6">
            <div class="row">
                <div class="column">
                    <a href="https://youtu.be/nMyZATdlg48?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-" data-event="tour-played-video" data-event-property="Transform data into decisions" class="video" data-pops-up="modal-video4">
                        <span class="icon">
                            @SvgHelper.GetSvg("play-for-video")
                        </span>
                        <img alt="" src="@CdnHelper.GetCdnUrl("/pictures/pages/tour/decisions.jpg")" />
                    </a>
                </div>
            </div>
            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.Decisions_Heading</h3>
                    <p>@Resources.Decisions_Copy</p>
                </div>
            </div>
        </div>
        <div class="column medium-6">
            <div class="row">
                <div class="column">
                    <a href="https://youtu.be/ITAFPRs4S8I?list=PL1N57mwBHtN0e-wvgVmrnn3Yd_WU7EHM-" data-event="tour-played-video" data-event-property="Share a world of insight" class="video" data-pops-up="modal-video5">
                        <span class="icon">
                            @SvgHelper.GetSvg("play-for-video")
                        </span>
                        <img alt="" src="@CdnHelper.GetCdnUrl("/pictures/pages/tour/share.jpg")" />
                    </a>
                </div>
            </div>
            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.Share_Heading</h3>
                    <p>@Resources.Share_Copy</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column medium-6">
            <div class="row">
                <div class="column">
                    <a href="https://youtu.be/S0FQTdZZ8Wc" data-event="tour-played-video" data-event-property="Share your insights on your website or blog" class="video" data-pops-up="modal-video6">
                        <span class="icon">
                            @SvgHelper.GetSvg("play-for-video")
                        </span>
                        <img alt="" src="@CdnHelper.GetCdnUrl("/pictures/pages/tour/shareweb.png")" />
                    </a>
                </div>
            </div>
            <div class="row row-size2">
                <div class="column">
                    <h3>@Resources.ShareWeb_Heading</h3>
                    <p>@Html.RawFormatInvariant(Resources.ShareWeb_Copy, Html.LocalizeUrl("/publishtoweb/"))</p>
                </div>
            </div>
        </div>
    </div>
</section>

